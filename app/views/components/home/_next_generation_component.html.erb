<div class=" lg:grid lg:grid-cols-2 lg:gap-4 text-center lg:h-cardHeight">
  <div class=" lg:mt-40 lg:ml-44">
    <div class="absolute inset-x-0 bottom-0 md:-bottom-24 lg:bottom-8 lg:relative lg:mt-0 lg:block lg:text-left font-custom">
      <h1 class="text-4xl lg:text-5xl text-center lg:text-left text-blackc"> <%=t :next_generation_title%> </h1>
      <p class="text-justify px-5 lg:text-left lg:px-0 pt-8  text-gray-500 md:text-center"> <%=t :next_generation_content %>
      </p>
      <div class="flex">
        <div class="m-auto mt-10 lg:mt-10 lg:m-0">
          <div class=" lg:bottom-0 md:-bottom-52 lg:relative lg:space-x-3 ">
            <a href="" class="btn"><%=t :button_text %></a>
          </div>
        </div>
      </div>
    </div>

  </div>


  <div class="h-homeCard  md:h-homeCardMd md:w-10/12 md:ml-auto lg:ml-0 lg:w-full">
    <div class="relative top-16 md:top-0">
      <img
        class=" w-full "
        srcset="
				assets/bg-intro-mobile.png 1000w,
				assets/bg-intro-desktop.png 1280w,
				"

        />
    </div>
    <div class="top-16   absolute px-5 lg:px-0 w-full md:inset-y-16 lg:right-0 md:right-20 md:max-w-xl">

      <img
        class="homeImage w-full"
        srcset="
				assets/image-mockups-1.png 1000w,
				assets/image-mockups-1.png 1280w,
				"/>
      <img
        class="homeImageMobile w-full md:w-full"
        srcset="
			assets/image-mockups-mobile.png 1000w,
			assets/image-mockups-mobile.png 1280w,
			"/>
    </div>
  </div>

</div>

<!-- ------card-1-endd------ -->